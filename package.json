{
	"name": "wds-blocks",
	"version": "2.0.0",
	"description": "A block starter for WebDevStudios projects.",
	"author": "WebDevStudios",
	"license": "GPL-3.0",
	"bugs": {
		"url": "https://github.com/WebDevStudios/WDS-Blocks/issues"
	},
	"homepage": "https://github.com/WebDevStudios/WDS-Blocks#readme",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/WebDevStudios/WDS-Blocks"
	},
	"main": "src/index.js",
	"engines": {
		"node": ">=12",
		"npm": ">=6"
	},
	"keywords": [
		"Gutenberg"
	],
	"dependencies": {
		"@glidejs/glide": "^3.4.1",
		"classnames": "^2.2.6",
		"eslint": "^7.21.0"
	},
	"devDependencies": {
		"@webdevstudios/css-coding-standards": "^1.0.1",
		"@webdevstudios/js-coding-standards": "^1.3.0",
		"@webdevstudios/npm-scripts": "^1.1.1",
		"@wordpress/scripts": "^13.0.3",
		"husky": "^5.1.3",
		"ignore-emit-webpack-plugin": "^2.0.6",
		"lint-staged": "^10.5.4",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.2.1",
		"run-s": "0.0.0",
		"stylelint": "^13.12.0",
		"stylelint-config-wordpress": "^17.0.0"
	},
	"scripts": {
		"start": "wds-start",
		"dev": "wds-start",
		"watch": "wds-start",
		"build": "wds-build",
		"format": "wds-format-js && wds-format-styles && npm run format:prettier",
		"format:prettier": "[[ -f .prettierignore ]] && ./node_modules/.bin/prettier ./ --write",
		"lint": "run-s lint:js lint:styles lint:php",
		"lint:js": "wds-format-js && wds-lint-js",
		"lint:php": "composer run lint",
		"lint:styles": "wds-format-styles && wds-lint-style",
		"postinstall": "npm run build && composer install --quiet"
	},
	"eslintConfig": {
		"extends": "@webdevstudios/js-coding-standards",
		"ignorePatterns": [
			"**/*.css",
			"**/*.json",
			"**/*.lock",
			"**/*.php",
			"**/*.png",
			"**/*.scss",
			"**/*.svg",
			"*.min.js",
			".*dist.js",
			".*rc.js",
			"./.*.js",
			".cache/**/*",
			".git*",
			"build/**/*",
			"cache/**/*",
			"dist/**/*",
			"node_modules/**/*",
			"vendor/**/*"
		]
	},
	"stylelint": {
		"extends": "stylelint-config-wordpress/scss",
		"rules": {
			"at-rule-no-unknown": null,
			"block-no-empty": true,
			"font-family-no-duplicate-names": true,
			"font-family-no-missing-generic-family-keyword": true,
			"function-url-quotes": "always",
			"max-line-length": null,
			"no-descending-specificity": null,
			"no-duplicate-selectors": null,
			"property-no-unknown": null,
			"scss/at-rule-no-unknown": null,
			"string-quotes": "single"
		},
		"ignoreFiles": [
			"**/*.js",
			"**/*.json",
			"**/*.jsx",
			"**/*.lock",
			"**/*.php",
			"**/*.png",
			"**/*.svg",
			"**/*.ts",
			"**/*.tsx",
			"*.min.js",
			".*dist.js",
			".*rc.js",
			"./.*.js",
			".cache/**/*",
			".git*",
			"build/**/*",
			"cache/**/*",
			"dist/**/*",
			"./style.css",
			"node_modules/**/*",
			"vendor/**/*"
		]
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx}": "npx eslint --fix",
		"*.{css,scss}": "npx stylelint --fix",
		"*.{md,html,json}": "npx prettier --write",
		"*.php": "npm run lint:php"
	}
}
